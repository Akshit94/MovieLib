<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="@dimen/author_name_margin"
            android:id="@+id/review_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/detail_text_view_normal_text_size"
            tools:text="Margot Robbie" />

        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/content_margin"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:lines="5"
            android:id="@+id/review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/read_more"
            android:background="@android:color/transparent"
            android:text="@string/read_more"
            android:layout_marginEnd="@dimen/review_read_more_margin"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>